<!DOCTYPE html>
<html>
  <head>
    <title>MessageBoardRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
        <div class="container-fluid">
          <%= link_to "Message Board", root_path, class:"navbar-brand"  %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">

              <% if user_signed_in? %>
              <li class="nav-item mx-5">
                <%= link_to "Sign out",  destroy_user_session_path, method: :delete %>
              </li>
               <li class="nav-item">
                <%= link_to "New Message",  new_message_path %>
              </li>
              <% else  %>
                <li class="nav-item mx-5">
                   <%= link_to "Sign Up", new_user_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "Log in",  new_user_session_path %>
                </li>

              <% end  %>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container">
        <p class="notice alert-info"><%= notice %></p>
       <p class="alert-primary"><%= alert %></p>
        <%= yield %>
      </div>
  </body>
</html>
